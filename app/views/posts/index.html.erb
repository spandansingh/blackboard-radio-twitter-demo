<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<hr>
<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.text, post_path(post) %></h5> 
      <h5 class="card-title"><%= link_to post.status, post_path(post) %></h5> 
      <p class="card-text"></p>
      <%= link_to 'Edit', edit_post_path(post), class: 'card-link' %>
      <%= link_to 'Publish', publish_post_path(post), class: 'card-link', method: :post %>
    </div>
  </div>
<% end %>